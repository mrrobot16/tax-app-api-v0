{
    "name": "irs-copilot-api",
    "license": "MIT",
    "scripts": {
        "dev": "uvicorn app.main:app --reload",
        "prod": "yarn linux:server",
        "session": "screen -S taxapp_api_session",
        "reattach": "screen -r taxapp_api_session",
        "heroku": "gunicorn -w 4 -k uvicorn.workers.UvicornWorker app.main:app",
        "kill:port": "sudo lsof -t -i:8000 | xargs kill",
        "linux:server": "gunicorn -w 4 -k uvicorn.workers.UvicornWorker app.main:app --bind 0.0.0.0:8000 --reload",
        "push": "git push origin dev",
        "pull": "git pull origin dev",
        "deploy": "git push heroku dev:master",
        "logs":"heroku logs --tail",
        "test": "yarn test:app && yarn test:db",
        "test:all": "yarn test:app && yarn test:db && yarn test:integrations && test:unit",
        "test:app": "pytest tests/test_app.py",
        "test:db": "PYTHONPATH=. pytest tests/unit/db",
        "test:integrations": "PYTHONPATH=. pytest tests/integrations",
        "test:unit": "PYTHONPATH=. pytest tests/unit"
    }
}